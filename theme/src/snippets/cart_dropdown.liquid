<div id="cart-dd" class="cart-dd {% if cart.item_count == 0 %}empty{% endif %}">
  <span class="cart-close">{% include 'icon-close' %}</span>
  <div class="row-wrapper">
    <div class="row">
      <div class="col-lg-12 col-form {% if cart.item_count == 0 %}hidden{% endif %}"> 

        <h2>Your Cart</h2>

        <form data-cart-view="data-cart-view">
          <div class="items">
            
            <div rv-each-item="cart.items" class="item">

                <div class="top">

                   <ul rv-hide="item.propertyArray | empty">
                      <li rv-each-property="item.propertyArray < properties">
                          <small class="date">{property.value}</small>
                      </li>
                  </ul>

                  <div rv-show="item.variant_title"></div>

                  <div class="name" rv-text="item.title"></div>

                  <div class="price"><em class="price" rv-html="item.price | money"></em></div>
                </div>

                <h6>Quantity</h6>
            
                <div class="control">
                  <div class="minus">
                    <a  href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | minus 1">-</a>
                  </div>
                  <div class="qty cart__qty-input">
                    <span class="medium-up--hide" rv-html="item.quantity"></span>
                  </div>
                  <div class="plus">
                    <a  href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | plus 1">+</a>
                  </div>
                </div>

            </div>
            
          </div>
          <div class="total">
            <div>Order Total</div>
            <div><span class="cart__subtotal" rv-html="cart.total_price | money"></span></div>
          </div>

          <div class="flex2">
            <div class="button-wrapper center"><a class="regular-button dark" data-text="Checkout" href="/checkout"><span class="text">Checkout</span></a></div>	
          </div>

        </form>
      </div>

      <div class="col-lg-12 col-empty {% if cart.item_count != 0 %}hidden{% endif %}">
        <div class="empty_cart">
          <p>YOUR CART IS EMPTY</p>
        </div>
      </div>
    </div>
  </div>
  
</div><!--END OF #CART-->