{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/tribeca-comedy-lounge.myshopify.com/articles/configure/144250/edit
{% endcomment %}
{% if article.metafields.custom_fields["background"] != blank %}
  <div class="custom-field custom-field__background custom-field__type--field-collection">
    <h3 class="custom-field--title">Background</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign comedian_background_array = article.metafields.custom_fields["comedian_background"] | split: separator %}
      {% assign background_image_array = article.metafields.custom_fields["background_image"] | split: separator %}
      {% assign photo_credit_array = article.metafields.custom_fields["photo_credit"] | split: separator %}
      {% assign fc_keys = article.metafields.custom_fields["background"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item-- fc-index--{{ index }}">
          <div class="fc-field field__comedian-background">
            {{ comedian_background_array[index] }}
          </div>
          <div class="fc-field field__background-image">
            {{ background_image_array[index] }}
          </div>
          <div class="fc-field field__photo-credit">
            {{ photo_credit_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}