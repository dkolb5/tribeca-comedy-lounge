<h1>{{ page.title }}</h1>

<div class="rte">
  {{ page.content }}
</div>

{% form 'contact' %}

  {% if form.posted_successfully? %}
    <p class="form-success">
      {{ 'contact.form.post_success' | t }}
    </p>
  {% endif %}

  {{ form.errors | default_errors }}

  Your Informations

  <label for="ContactFormFirstName">First Name *</label>
  <input type="text"
    name="contact[firstname]"
    id="ContactFormFirstName"
    placeholder="First Name *"
    required>

  <label for="ContactFormLastName">Last Name *</label>
  <input type="text"
    name="contact[lastname]"
    id="ContactFormLastName"
    placeholder="Last Name *"
    required>

  <label for="ContactFormEmail">Email *</label>
  <input type="email"
    name="contact[email]"
    id="ContactFormEmail"
    placeholder="{{Email *}}" 
    spellcheck="false"
    autocomplete="off"
    autocapitalize="off"
    required>

  <label for="ContactFormPhone">Phone Number</label>
  <input type="tel"
    name="contact[phone]"
    id="ContactFormPhone"
    placeholder="Phone Number"
    pattern="[0-9\-]*">


  Ticket Details

  <label for="ContactFormDate">Show date *</label>
  <input type="date"
    name="contact[date]"
    id="ContactFormDate"
    placeholder="Date *"
    required>

  <label for="ContactFormNumberparty">Number in party *</label>
  <select id="ContactFormNumberparty" name="contact[Numberparty]" required>
    <option>1</option>
    <option>2</option>
    <option>3</option>
  </select>

  <label for="ContactFormTickettype">Ticket Type *</label>
  <select id="ContactFormTickettype" name="contact[tickettype]" required>
    <option>Type 1</option>
    <option>Type 2</option>
    <option>Type 3</option>
  </select>

  <label for="ContactFormVoucher">Voucher number</label>
  <input type="text"
    name="contact[voucher]"
    id="ContactFormVoucher"
    placeholder="Voucher">

  <label for="ContactFormMessage">Special requests</label>
  <textarea rows="10"
    name="contact[body]"
    id="ContactFormMessage"
    placeholder="Your Message">
    {%- if form.body -%}
      {{- form.body -}}
    {%- endif -%}
  </textarea>

  <input type="submit" class="button" value="SUBMIT">

{% endform %}
