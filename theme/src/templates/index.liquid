<section class="spacing-top-and-bottom-xs" id="home-section-two">
  <div class="row center-xs">
    <div class="col-xs-10">
      <h2 class="font-barlow"><span class="custom-110">LAUGH</span> YOUR <span class="behind-red-two font-helio">ASS {% include 'behind-red-two' %}</span> OFF</h2>
    </div>
  </div>
  <!-- {% include 'icon-large-ticket-red' %} {% include 'icon-table-and-chairs' %} {% include 'icon-microphone' %} -->
  <div class="row">
    {%- comment -%}
      Style holder for shows - can they be a blog type or product?
    {%- endcomment -%}
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 col-xs-offset-0">
      <ul class="row schedule-list">
        {% if product.metafields.custom_fields["comedians"] != blank %}

          {% assign separator = "|###|" %}
          {% assign name_array = product.metafields.custom_fields["name"] | split: separator %}
          {% assign avatar_array = product.metafields.custom_fields["avatar"] | split: separator %}
          {% assign fc_keys = product.metafields.custom_fields["comedians"] | split: "," %}
          {% for i in fc_keys %}
            {% assign index = i | plus: 0 %}
            <div class="fc-item fc-item-- fc-index--{{ index }}">
              <div class="fc-field field__name">
                {{ name_array[index] }}
              </div>
              <div class="fc-field field__avatar">
                {{ avatar_array[index] }}
              </div>
            </div>
          {% endfor %}
          
        {% endif %}
        <li class="col-lg-4 col-md-4 col-sm-4 col-xs-6" id="schedule-item-1">
          <div class="top">
            <ul class="date row start-xs middle-xs">
              <li>{% include 'icon-calendar-red' %}</li>
              <li><p class="small">February 08, 2029</p></li>
            </ul>
            <h5>{{ "Gary Vider, Adam Strauss, Sheba Mason, Vincent James" | truncate: 70, " & MORE" }}</h5>
            <ul class="price-and-location"></ul>
          </div>
          <div class="bws-button-wrapper">
            <a href="/page/schedule" class="bws-button regular-button absolute-link">
              <div class="inner-wrapper">
                {% include 'icon-ticket-light' %}
                <span class="text">make a reservation</span>
              </div>
            </a>
          </div>
        </li>

      </ul>
    </div>
  </div>
  <div class="row center-xs">
    <div class="bws-button-wrapper">
      <a href="/pages/schedule" class="underline-button-double red">More Shows</a>
    </div>
  </div>
</section>


